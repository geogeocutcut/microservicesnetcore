<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration xmlns='urn:nhibernate-configuration-2.2'>
  <session-factory>
    <property name="dialect">NHibernate.Dialect.MsSql2012Dialect</property>
    <property name="connection.connection_string">
        Server=AMADABLAM\SQL2014EXPRESS;initial catalog=AuthenticationDomain;Integrated Security=True
    </property>
    <property name="hbm2ddl.auto">update</property>
    <property name="show_sql">true</property>
    <mapping resource="Libragri.AuthenticationDomain.RepositoriesNH.Config.Profile.hbm.xml" assembly="Libragri.AuthenticationDomain.RepositoriesNH" />
    <mapping resource="Libragri.AuthenticationDomain.RepositoriesNH.Config.User.hbm.xml" assembly="Libragri.AuthenticationDomain.RepositoriesNH" />
    <mapping resource="Libragri.AuthenticationDomain.RepositoriesNH.Config.UserActivationRequest.hbm.xml" assembly="Libragri.AuthenticationDomain.RepositoriesNH" />
    <mapping resource="Libragri.AuthenticationDomain.RepositoriesNH.Config.UserRefreshToken.hbm.xml" assembly="Libragri.AuthenticationDomain.RepositoriesNH" />
    <mapping resource="Libragri.AuthenticationDomain.RepositoriesNH.Config.ResetPwdRequest.hbm.xml" assembly="Libragri.AuthenticationDomain.RepositoriesNH" />
    <mapping resource="Libragri.AuthenticationDomain.RepositoriesNH.Config.UserEvent.hbm.xml" assembly="Libragri.AuthenticationDomain.RepositoriesNH" />

  </session-factory>
</hibernate-configuration>
